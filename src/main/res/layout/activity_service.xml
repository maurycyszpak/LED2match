        android:layout_marginTop="5dp"
        android:gravity="center" />

    <TextView
        android:text="LED_W"
        android:layout_width="@dimen/service_page_col2_width"
        android:layout_height="@dimen/led_item_height"
        android:textColor="@android:color/black"
        android:background="#AAD7FF"
        android:id="@+id/textViewLED5"
