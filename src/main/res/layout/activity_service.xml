        android:layout_height="@dimen/lamp_item_height"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:id="@+id/textViewCOL3Header"
        android:layout_alignTop="@+id/textViewCOL1Header"
        android:layout_toRightOf="@+id/textViewCOL2Header"
