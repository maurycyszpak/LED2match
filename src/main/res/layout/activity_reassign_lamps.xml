                android:tag="Button6"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:textSize="@dimen/button_text_size"
                />

            <Spinner
                android:id="@+id/spinner8"
                android:layout_width="0dp"
                android:layout_height="@dimen/digital_panel_button_height"
                android:layout_weight="3"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/button_margin"
                android:visibility="visible"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Llayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/spinner_items_vert_margin"
            android:baselineAligned="false"
            android:layout_below="@+id/lLayout8"
            >

            <TextView
                android:layout_marginRight="@dimen/button_margin"
                android:layout_height="@dimen/digital_panel_button_height"
                android:layout_width="0dp"
                android:gravity="center"
                android:text="Button 9 lamp:"
                android:tag="Button6"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:textSize="@dimen/button_text_size"
                />

            <Spinner
                android:id="@+id/spinner9"
                android:layout_width="0dp"
                android:layout_height="@dimen/digital_panel_button_height"
                android:layout_weight="3"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/button_margin"
                android:visibility="visible"

                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:baselineAligned="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/digital_panel_button_height"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/button_margin"
                android:text="Cancel"
                android:visibility="visible"
                android:onClick="cancel_assignment"
                android:background="@color/torso_gray_button"
                android:textColor="@color/black"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/digital_panel_button_height"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/button_margin"
                android:text="Store"
                android:visibility="visible"
                android:onClick="store_assignment"
                android:background="@color/torso_blue_main"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>