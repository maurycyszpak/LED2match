                    android:gravity="center_horizontal"
                    android:theme="@style/EditTextGrayUnderline" />

                <TextView
                    android:id="@+id/text_TL84s_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/button_margin"
                    android:layout_weight="@dimen/settings_pg_masterslave_header_label_width"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="TL84 %"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="@dimen/settings_pg_masterslave_header_textsize"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:theme="@style/EditTextGrayUnderline" />

            </LinearLayout>

            <LinearLayout
