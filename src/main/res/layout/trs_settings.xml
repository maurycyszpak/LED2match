                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="@dimen/button_margin_10dp"
                    android:background="@color/torso_gray_button"
                    android:onClick="onClickReassign"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="Reassign"
                    android:textColor="@color/black"
                    android:textSize="@dimen/button_text_size" />


                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/torso_blue_main"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:onClick="saveSettings"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lLayoutbottomspace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:baselineAligned="true"
                android:layout_alignParentBottom="true"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/torso_footer_address"
                    android:visibility="gone"
                    />


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>