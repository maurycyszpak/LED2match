                android:layout_marginTop="@dimen/settings_pg_masterslave_row_top_margin"
                android:baselineAligned="false"
                android:layout_below="@id/lLayout_masterslave_header1"
                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/button_margin"
                    android:layout_weight="@dimen/settings_pg_masterslave_label_width"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/dark_gray"
                    />

                <TextView
                    android:id="@+id/text_LED_full_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Full"
                    android:layout_marginEnd="@dimen/button_margin"
                    android:layout_weight="@dimen/settings_pg_masterslave_value_width"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_pg_masterslave_header_textsize"
                    android:theme="@style/EditTextGrayUnderline"
                    android:textColorHint="@color/dark_gray"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text_LED_dim_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="DIM"
                    android:layout_marginEnd="@dimen/button_margin"
                    android:layout_weight="@dimen/settings_pg_masterslave_value_width"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_pg_masterslave_header_textsize"
                    android:theme="@style/EditTextGrayUnderline"
                    android:textColorHint="@color/dark_gray"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text_TL84_full_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Full"
                    android:layout_marginEnd="@dimen/button_margin"
                    android:layout_weight="@dimen/settings_pg_masterslave_value_width"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_pg_masterslave_header_textsize"
                    android:theme="@style/EditTextGrayUnderline"
                    android:textColorHint="@color/dark_gray"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text_TL84_DIM_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="DIM"
                    android:layout_marginEnd="@dimen/button_margin"
                    android:layout_weight="@dimen/settings_pg_masterslave_value_width"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/settings_pg_masterslave_header_textsize"
                    android:theme="@style/EditTextGrayUnderline"
                    android:textColorHint="@color/dark_gray"
                    android:textStyle="bold"
                    />


            </LinearLayout>

            <LinearLayout
