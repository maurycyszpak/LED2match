<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kiand.LED2match"
    android:targetSandboxVersion="2"
    android:versionCode="102"
    android:versionName="1.01" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="27" />

    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name="com.kiand.LED2match.MyApplication"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="Light2match"
        android:largeHeap="true" >
        <activity android:name="com.kiand.LED2match.ReassignLamps" />
        <activity
            android:name="com.kiand.LED2match.LightAdjustments"
            android:label="Set Lights"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.kiand.LED2match.BtScannerActivity"
            android:label="RGB LED Bluetooth scanner"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.ServicePageActivity"
            android:label="LED2match"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.SequenceProgramming"
            android:label="Lights Sequence page"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.DigitalPanelActivity"
            android:label="digital panel"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.kiand.LED2match.TRSDigitalPanel"
            android:label="Light2match"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/usb_device_filter" />
        </activity>
        <activity
            android:name="com.kiand.LED2match.TRSLightOperatingHours"
            android:label="Operating hours"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.TRSSequence"
            android:label="Sequence Programming (PRG)"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.TRSBlowerPage"
            android:label="Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.TRSManualPage"
            android:label="Manual"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.TRSRecertificationPage"
            android:label="Recertification Page"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.TRSBluetoothDevicesScan"
            android:label="Paired bluetooth devices"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kiand.LED2match.sequenceSummaryPage"
            android:label="HTS-RGBW"
            android:screenOrientation="portrait" />

        <service
            android:name="com.kiand.LED2match.UsbCOMMsService"
            android:enabled="true"
            android:stopWithTask="false" />
        <service
            android:name="com.kiand.LED2match.BtCOMMsService"
            android:enabled="true"
            android:stopWithTask="false" />
    </application>

</manifest>